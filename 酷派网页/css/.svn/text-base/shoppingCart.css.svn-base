*{margin: 0;padding: 0;}
#mybody{
	width: 100%;
}
#wrap{
	width: 100%;
	overflow: hidden;
}
#shopping_left{
	float: left;
	width: 50%;
}
#picture_big{
	width: 570px;
	height: 570px;
	margin-top: 30px ;
	margin-left: 140px;
}
#picture_big img{
	width: 570px;
	height: 570px;
	position: absolute;
}
#left_bottom_first{
	width: 600px;
	height: 110px;
	margin-left: 140px;
}
#shopping_left button{
	border: none;
	background: white;
	font-size: 25px;
}
#shopping_left button:hover{
	color: #55a0ff;
}
#left_bottom_first ul{
	display: inline-block;
	list-style: none;
	width: 500px;
	height: 90px;
	overflow: hidden;
	vertical-align: middle;
}
#left_bottom_first ul li{
	float: left;
	width: 90px;
	height: 90px;
	margin-right: 6px;
	border: 1px solid #eeeef3;
}
#shopping_right{
	float: right;
	width: 50%;
	font-size: 16px;
	position: relative;
}
.name_title{
	margin-top: 37px;
	width: 550px;
	height: 30px;
	font-size: 24px;
	color: #333333;
	margin-bottom: 18px;
}
hr{
	width: 550px;
	height: 0px;
	border: 1px solid #f3f3f3;
}
.price_title{
	width: 550px;
	height: 26px;
	font-size: 24px;
	color: #55a0ff;
	margin-top: 16px;
	margin-bottom: 40px;
}
#delivery_time{
	font-size: 14px;
	color: #666666;
}
#delivery{
	display: inline-block;
	font-size: 16px;
	border: 1px solid #cccccc;
	line-height: 29px;
	background: white;
	border-radius: 5px 5px 0 0;
	border-bottom: 0px solid #cccccc;
	margin-bottom: 18px;
	z-index: 999;
}
#delivery p{
	transform: rotate(180deg);
	display: inline-block;
}
#location{
	width: 384px;
	height: 263px;
	border: 1px solid #cccccc;
	position: absolute;
	top: 195px;
	background: white;
	border-radius: 5px;
	display: none;
}
#location ul{
	list-style: none;
	width: 384px;
	height: 36px;
}
#location ul li{
	width: 57px;
	height: 21px;
	margin-right: 5px;
	border: 1px solid #cccccc;
	border-bottom: 0px solid #cccccc;
	border-radius:  5px 5px 0 0;
	float: left;
	margin-top: 14px;
}
#location ul li:nth-of-type(1){
	margin-left: 9px;
}
#location_minute{
	width: 384px;
	height: 227px;
	border-top: 1px solid #cccccc;
	position: relative;
}
#location_minute div{
	width: 384px;
	height: 227px;
	position: absolute;
}
.select_color{
	font-size: 16px;
	color: #999999;
}
.color{
	width: 570px;
	height:149px;
}
.color div{
	width: 260px;
	line-height: 50px;
	border: 1px solid #dfdfdf;
	border-radius: 5px;
	float: left;
	margin-right: 22px;
	text-align: center;
	font-size: 17px;
	color: #333333;
}
.color div p{
	width: 21px;
	height: 21px;
	border-radius: 50%;
	display: inline-block;
}
.color div:nth-of-type(1) p{
	background: #b3e1fe;
}
.color div:nth-of-type(2) p{
	background: #c2252c;
}
.select_pro{
	font-size: 21px;
	color: #999999;
	margin-bottom: 18px;
}
.name_con{
	font-size: 16px;
	color: #7d7d7d;
	margin-bottom: 18px;
}
.price_con{
	color: #7aa0ff;
}
.btn{
	margin-top: 18px;
	width: 570px;
}
.btn button{
	width: 260px;
	height: 60px;
	font-size: 18px;
	color: white;
	border: none;
}
.btn button:nth-of-type(1){
	background: #f5b400;
	margin-right: 25px;
}
.btn button:nth-of-type(2){
	background: #2485ff;
}
#message_wrap{
	width: 100%;
	height: 70px;
	border-bottom: 1px solid #f7f7f7;
	margin-top: 50px;
}
#details_list{
	width: 100%;
	line-height: 70px;
	list-style: none;
	text-align: center;
}
#details_list li{
	font-size: 21px;
    color: #999999;
    float: left;
    margin-right: 70px;
}
#details_list li:first-child{
	margin-left: 156px;
}
